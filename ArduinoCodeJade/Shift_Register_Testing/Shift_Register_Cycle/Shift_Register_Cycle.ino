// inslude the SPI library:#include <SPI.h>// set pin 10 as the slave select for the digital pot:const int slaveSelectPin = 10;int bits = 0b10000000;void setup() {    Serial.begin(9600);  // set the slaveSelectPin as an output:  pinMode(slaveSelectPin, OUTPUT);  // initialize SPI:  SPI.begin();  Serial.println("Start:");  SPI.setBitOrder(LSBFIRST);}void loop() {    Serial.println(bits);    digitalWrite(slaveSelectPin, LOW);    delay(10);    SPI.transfer(bits);    delay(10);    digitalWrite(slaveSelectPin, HIGH);    delay(75);    bits = bits >> 1;    if (bits == 0)    {      bits = 0b10000000;    }}